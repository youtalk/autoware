{
  "name": "Autoware",
  "build": {
    "dockerfile": "../Dockerfile",
    "args": { "BASE_IMAGE": "ghcr.io/autowarefoundation/autoware:latest-devel" }
  },
  "remoteUser": "autoware",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--net=host",
    "--volume=/etc/localtime:/etc/localtime:ro"
  ],
  "customizations": {
    "vscode": {
      "settings.json": {
        "terminal.integrated.profiles.linux": { "bash": { "path": "/bin/bash" } }
      }
    }
  }
}
